 @model IEnumerable<string>

@Html.ActionLink("Home","List","Product",null,new { @class="btn btn-lg btn-block btn-default"})

@foreach(string s in Model)
{
    @Html.RouteLink(s,
    new
    {
        controller = "Product",
        action="List",
        category=s,
        page=1
    }, new { @class= "btn btn-lg btn-block btn-default" + (s ==ViewBag.SelectedCategory?" btn-primary":"")})
}